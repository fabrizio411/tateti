---
import Logo from "@assets/icons/logo.svg";
import Restart from "@assets/icons/icon-restart.svg";
import Card from "./Card.astro";
---

<div
  class="w-full p-4 max-w-[460px] flex flex-col items-stretch gap-4 sm:gap-6"
>
  <div class="grid grid-cols-3 place-items-center h-10 gap-4 sm:gap-6">
    <div class="w-full h-full flex items-center">
      <a href="/">
        <Logo class="hover:scale-110 transition-transform" />
      </a>
    </div>
    <Card class="after:-bottom-[6px] cursor-auto" id="turn-box">
      <h4 class="select-none">TURNO:</h4>
      <span id="turn-show" class="select-none"></span>
    </Card>

    <div class="w-full h-full flex items-center justify-end relative">
      <button
        id="restart-btn"
        class="relative after:content-[''] after:absolute after:left-0 after:h-10 after:w-full after:-z-10 after:rounded-lg active:top-[6px] top-0 transition-all after:transition-all active:after:bottom-0 after:-bottom-[6px] cursor-pointer after:bg-muted-foreground/40 fill-muted-background h-full aspect-square grid place-items-center rounded-lg bg-muted-foreground hover:bg-foreground"
      >
        <Restart />
      </button>
    </div>
  </div>

  <div class="grid grid-cols-3 grid-rows-3 w-full aspect-square gap-4 sm:gap-6">
    <Card data-position="0" id="tile-0" class="game-tile" />
    <Card data-position="1" id="tile-1" class="game-tile" />
    <Card data-position="2" id="tile-2" class="game-tile" />
    <Card data-position="3" id="tile-3" class="game-tile" />
    <Card data-position="4" id="tile-4" class="game-tile" />
    <Card data-position="5" id="tile-5" class="game-tile" />
    <Card data-position="6" id="tile-6" class="game-tile" />
    <Card data-position="7" id="tile-7" class="game-tile" />
    <Card data-position="8" id="tile-8" class="game-tile" />
  </div>

  <div class="grid grid-cols-3 gap-4 sm:gap-6">
    <div
      class="flex flex-col items-center bg-accent-1 rounded-xl py-2 h-16 justify-between text-muted-background"
    >
      <p>X (<span id="x-player"></span>)</p>
      <h3 class="font-bold" id="x-player-wins">0</h3>
    </div>
    <div
      class="flex flex-col items-center bg-muted-foreground rounded-xl py-2 h-16 justify-between text-muted-background"
    >
      <p>EMPATES</p>
      <h3 class="font-bold" id="ties">0</h3>
    </div>
    <div
      class="flex flex-col items-center bg-accent-2 rounded-xl py-2 h-16 justify-between text-muted-background"
    >
      <p>O (<span id="o-player"></span>)</p>
      <h3 class="font-bold" id="o-player-wins">0</h3>
    </div>
  </div>
</div>
