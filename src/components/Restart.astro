---
import Button from "./Button.astro";
---

<div
  id="restart-menu"
  class="hidden fixed top-0 left-0 h-full w-full bg-black/30 flex-col items-stretch"
>
  <div class="flex-1"></div>
  <div
    class="h-64 px-4 bg-background flex flex-col items-center justify-center gap-6"
  >
    <h1 class="font-bold text-muted-foreground">REINICIAR PARTIDA?</h1>
    <div class="flex gap-6">
      <Button class="z-10 px-6" id="restart-cancel" variant="invert"
        ><h3>NO, CANCELAR</h3></Button
      >
      <Button class="z-10 px-6" id="restart-confirm" variant="secondary">
        <h3>SI, REINICIAR</h3>
      </Button>
    </div>
  </div>
  <div class="flex-1"></div>
</div>
